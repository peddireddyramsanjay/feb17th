n = int(input('Enter the number:-'))
odd_sum = 0
even_sum = 0
for i in range(1,n+1):
    if i%2==0:
        even_sum = even_sum + i
    if i%2!=0:
        odd_sum = odd_sum + i
print('sum of the odd numbers:-',odd_sum)
print('sum of the even numbers:-',even_sum)
print('sum of the both even and odd:-',odd_sum+even_sum)
